// prettier-ignore
{
    
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
      "types": ["node"],
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@assets/*": ["./assets/*"],
        "@components/*": ["./src/components/*"],
        "@constants/*": ["./src/constants/*"],
        "@containers/*": ["./src/containers/*"],
        "@hoc/*": ["./src/hoc/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@routes/*": ["./src/routes/*"],
        "@state/*": ["./src/state/*"],
        "@utils/*": ["./src/utils/*"],
        "@views/*": ["./src/views/*"],
      }
    },
    "exclude": ["node_modules", "dist"]
  }
